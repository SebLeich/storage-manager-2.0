{
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "useDefineForClassFields": false,
    "paths": {
      "@/*": ["src/*"],
      "@bpmn-io/events": ["./src/lib/bpmn-io/interfaces/events"],
      "@bpmn-io/modules": ["./src/lib/bpmn-io/interfaces/modules"],
      "@main-components": ["./src/app/components/main"],
      "@process-builder/actions": ["./src/lib/process-builder/store/actions"],
      "@process-builder/injection": ["./src/lib/process-builder/injection-token"],
      "@process-builder/interfaces": ["./src/lib/process-builder/interfaces"],
      "@process-builder/store": ["./src/lib/process-builder/store"],
      "@process-builder/selectors": ["./src/lib/process-builder/store/selectors"],
      "@procedure": ["./src/lib/procedure-store"],
      "@smgr/components": ["./src/app/components"],
      "@smgr/components/select": [
        "./src/lib/storage-manager/components/select"
      ],
      "@smgr/interfaces": ["./src/lib/storage-manager/interfaces"],
      "@smgr/solvers": ["./src/lib/storage-manager/solvers"],
      "@smgr/store": ["./src/lib/storage-manager/store"]
    }
  },
  "exclude": ["./cypress.config.ts", "../*/cypress/**/*"],
}
