/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "node",
      "jasmine",
      "rxjs"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "useDefineForClassFields": false,
    "paths": {
      "@animations": ["./src/lib/shared/animations"],
      "@bpmn-io/events": ["./src/lib/bpmn-io/interfaces/events"],
      "@bpmn-io/modules": ["./src/lib/bpmn-io/interfaces/modules"],
      "@main-components": ["./src/app/components/main"],
      "@process-builder/store": ["./src/lib/process-builder/store"],
      "@process-builder/selectors": ["./src/lib/process-builder/store/selectors"],
      "@process-builder/interfaces": ["./src/lib/process-builder/interfaces"],
      "@procedure": ["./src/lib/procedure-store"],
      "@smgr/components": ["./src/app/components"],
      "@smgr/components/select": ["./src/lib/storage-manager/components/select"],
      "@smgr/interfaces": ["./src/lib/storage-manager/interfaces"],
      "@smgr/solvers": ["./src/lib/storage-manager/solvers"],
      "@smgr/store": ["./src/lib/storage-manager/store"]
    }
  }
}